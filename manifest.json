{
  "name": "Limes",
  "description": "Limit your favourite websites visit frequency",
  "version": "0.1.0",
  "author": "Shiva Kumar K",
  "manifest_version": 3,
  "action": {
    "default_title": "Limes",
    "default_icon": {
      "128": "/images/logo.png"
    },
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "homepage_url": "https://github.com/kshivakumar/limes",
  "icons": {
    "128": "/images/logo.png"
  },
  "incognito": "spanning",
  "minimum_chrome_version": "92",
  "offline_enabled": true,
  "permissions": [
    "alarms",
    "storage",
    "webNavigation",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}